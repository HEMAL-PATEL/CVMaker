<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:tag="@string/tag_border_layout"
    android:background="@drawable/border_background"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:itemCount="2"
        tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:listitem="@layout/item_experience"
        tools:orientation="vertical"
        tools:scrollbars="none"/>

    <Button
        android:id="@+id/btn_add_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ButtonStyle"
        android:tag="@string/tag_edit_button"
        android:text="@string/txt_add_new"/>

</LinearLayout>