<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/heading_work_experience"
            style="@style/TextTitleStyle.Larger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_50"
            android:layout_marginLeft="@dimen/margin_50"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:text="@string/heading_experience"
            android:textAllCaps="true" />

        <include layout="@layout/layout_experience"/>

        <TextView
            android:id="@+id/heading_education"
            style="@style/TextTitleStyle.Larger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_50"
            android:layout_marginLeft="@dimen/margin_50"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:text="@string/heading_education"
            android:textAllCaps="true" />

        <include layout="@layout/layout_education"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/heading_skills"
            style="@style/TextTitleStyle.Larger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:text="@string/heading_skills"
            android:textAllCaps="true" />

        <include layout="@layout/layout_skills"/>

        <TextView
            android:id="@+id/heading_accomplishments"
            style="@style/TextTitleStyle.Larger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:text="@string/heading_accomplishments"
            android:textAllCaps="true" />

        <include layout="@layout/layout_achievements"/>

        <TextView
            android:id="@+id/heading_interests"
            style="@style/TextTitleStyle.Larger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:text="@string/heading_interests"
            android:textAllCaps="true" />

        <include layout="@layout/layout_interests"/>

    </LinearLayout>>

</LinearLayout>