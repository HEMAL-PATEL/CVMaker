<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="TextTitleStyle">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">@dimen/txt_size_18</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextTitleStyle.Large">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/txt_size_24</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextTitleStyle.Large.Focused">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/txt_size_20</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextTitleStyle.Larger">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/txt_size_24</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitleStyle.Focused">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/txt_size_20</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/margin_10</item>
        <item name="android:paddingRight">@dimen/margin_10</item>
    </style>

    <style name="TextTitleStyle.Medium">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/txt_size_20</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/margin_10</item>
    </style>

    <style name="TextTitleStyle.Medium.Heading">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/txt_size_20</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitleStyle.Small">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/txt_size_18</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal|italic</item>
    </style>

    <style name="TextTitleStyle.Small.Focused">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/txt_size_18</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextTitleStyle.Smaller">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textStyle">normal</item>
        <item name="android:drawablePadding">@dimen/margin_8</item>
    </style>

    <style name="TextTitleStyle.EvenSmaller">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/txt_size_10</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textStyle">normal</item>
        <item name="android:drawablePadding">@dimen/margin_8</item>
    </style>

    <style name="TextTitleStyle.Smaller.Colored">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/txt_size_12</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textStyle">normal|italic</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="scrollbarStyleVertical">
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/scroll_bar_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scroll_bar_track</item>
        <item name="android:scrollbarSize">6dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">@dimen/margin_2</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:drawableLeft">@drawable/ic_add</item>
        <item name="android:minWidth">@dimen/margin_150</item>
        <item name="android:textStyle">bold</item>
        <item name="app:elevation" tools:targetApi="lollipop">@dimen/margin_8</item>
        <item name="stateListAnimator">@null</item>
        <item name="app:translationZ" tools:targetApi="lollipop">@dimen/margin_8</item>
        <item name="android:layout_margin">@dimen/margin_4</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/btn_background</item>
    </style>

</resources>
