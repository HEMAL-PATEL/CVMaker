<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="TextTitleStyle">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">@dimen/txt_size_18</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextTitleStyle.Large">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitleStyle.Larger">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/txt_size_28</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitleStyle.Focused">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/margin_10</item>
        <item name="android:paddingRight">@dimen/margin_10</item>
    </style>

    <style name="TextTitleStyle.Medium">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/txt_size_12</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingLeft">@dimen/margin_10</item>
        <item name="android:paddingRight">@dimen/margin_10</item>
        <item name="android:paddingTop">@dimen/margin_2</item>
        <item name="android:paddingBottom">@dimen/margin_2</item>
    </style>

    <style name="TextTitleStyle.Medium.Heading">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitleStyle.Small">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/txt_size_12</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal|italic</item>
    </style>

    <style name="TextTitleStyle.Smaller">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/txt_size_10</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextTitleStyle.EvenSmaller">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/txt_size_8</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textStyle">normal</item>
        <item name="android:drawablePadding">@dimen/margin_8</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

</resources>
